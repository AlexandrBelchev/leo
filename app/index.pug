        script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js')
        title leo/-
    body
        header.header
            .container.header__container
                a.logo Leo/-
                nav.menu
                    -
                        let menus = [
                            {
                                link: '.solution',
                                text: 'Solution'
                            },
                            {
                                link: '.products',
                                text: 'Products'
                            },
                            {
                                link: '.portfolio',
                                text: 'Portfolio'
                            },
                            {
                                link: '.contact',
                                text: 'Contact'
                            }
                        ]
                    ul.menu__wrap
                        each menu, i in menus
                            li.menu__item
                                a.menu__link(href=menu.link)=menu.text
            .header__main
                .center.slider
                    -
                        let slides = [
                            {
                                img:'./img/slide-1.png',
                                header__heading:'Introducing',
                                header__paragraph:'Something hot....'
                            },
                            {   img:'./img/slide-2.png',
                                header__heading:'End',
                                header__paragraph:'Something new....'
                            }
                        ]
                    each slide, i in slides
                        .header__item
                            .header__view
                                img(src=slide.img alt="")
                            .header__description
                                .header__text
                                    h2.header__heading=slide.header__heading
                                    p.header__paragraph=slide.header__paragraph
                                button.header__button
                                    span Try Demo
        section.tab
            -
                let tabs= [
                    {
                        class:'current',
                        img:'./img/tabs-responsive.png',
                        tab__heading: 'Responsive',
                        tab__description: 'Websites',
                        data_tab:'tab-1'
                    },
                    {
                        img:'./img/tabs-ecommers.png',
                        tab__heading: 'e Commerce',
                        tab__description: 'Websites',
                        data_tab:'tab-2'
                    },
                    {
                        img:'./img/tabs-blog.png',
                        tab__heading: 'Daily blog',
                        tab__description: 'Websites',
                        data_tab:'tab-3'
                    },
                    {
                        img:'./img/tabs-search.png',
                        tab__heading: 'Search based',
                        tab__description: 'Websites',
                        data_tab:'tab-4'
                    }
                ]
            .container.tab__container
                ul.tabs
                    each tab, i in tabs
                        li.tab__link(class=tab.class , data-tab=tab.data_tab)
                            img(src=tab.img alt="")
                            .tab__name
                                span.tab__name--heading=tab.tab__heading
                                p.tab__name--description=tab.tab__description
                each tabcontent, i in tabcontents
                    div(class=tabcontent.class__tab).tab__content(class=tabcontent.class)
                        .tab__image--wraper
                            img.img-responsive(src=tabcontent.img alt="")
                        h2.tab__content__title=tabcontent.tab__content__title
                        p.tab__content__description=tabcontent.tab__content__description1
                        p.tab__content__description=tabcontent.tab__content__description2
