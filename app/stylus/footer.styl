.footer
  &__top
    padding 23px 0 35px 0
  &__line
    opacity 0.3
  &__item--50
    border-radius 5px
    width 60%
    padding 15px 15px 18px 29px
  &__item--login
    background-color #e67624
  &__item--subscribe
    background-color #01d4f3
  &__item--title
    line-height 21px
    font-weight 300
    color #fff
    margin-bottom 20px
  &__item--input
    border none
    color #4f4f4f
    background-color #e8e8e8
    font-size 16px
    padding 5px 12px
    width 33%
  &__item--50__form
    display flex
    flex-wrap wrap
    justify-content space-between
  &__item--20
    flex-basis 20%
  &__item--30
    flex-basis 37%
    font-size 13px
    line-height 22px
    display flex
    align-items center
    flex-wrap wrap
  &__bottom
    background url("../img/footer.png") no-repeat
    background-size cover
    display flex
    color #FFFFFF
    padding 30px 0 45px 0
    justify-content space-between
  &__item--auto
    display flex
    flex-wrap wrap
    align-items flex-end
    position relative
    flex-basis 22%
    justify-content center
  &__about
    list-style none
    padding 0
  &__item__title
    font-family segoewp
    font-weight 300
    font-size 22px
    line-height 33px
    margin-bottom 5px
  &_item__text
    opacity 0.5
  &_item__info
    flex-basis 100%
    opacity 0.66
    font-family Arial
    font-weight 700
  &__about
      a
        transition 0.5s all ease
        color #FFFFFF
        opacity 0.5
        line-height 22px
        font-size 13px
        &:hover
          opacity 1
  &__author
    opacity 0.66
    font-weight 400
    font-size 13px
    line-height 16px
    width auto
  &__author
      a
        transition 0.5s all ease
        opacity 0.66
        &:hover
          opacity 1
  &__slide
    display flex
    justify-content space-between
    width 100%
  &__icon-wrap
    display flex
    flex-basis 100%
    justify-content center
    align-items center
  &-nav
    position absolute
    transition 0.5s all ease
    cursor pointer
    font-size 16px
    opacity 0.2
    margin 0 5px
    &:hover
      opacity 1
  &__item--title
    font-size 26px
  &__top
    .container
      display flex
      flex-wrap wrap
      justify-content center
.subscribe--input
  width 60%
.button
  border none
  color #fff
  font-size 16px
  cursor pointer
.subscribe--button
  background-color #029bb1
.login--button
  background-color #444444
.footer__bottom .container
  flex-wrap wrap
.footer__item--50 + .footer__item--50
  margin-top 20px
.logo--footer
  opacity 0.2
.icon-circle-left
  top -28px
  right 80px
.icon-circle-right
  top -28px
  right 60px

@media (min-width: 720px)
  .footer__item--auto
    margin 0 auto
    justify-content left
@media (min-width: 960px)
  .icon-arrow-prev
    left -10px
  .icon-arrow-next
    right -10px
  .footer__top .container
    flex-wrap nowrap
    justify-content space-between
  .footer__item--50 + .footer__item--50
    margin-top 0
  .footer__item--50
    width 44%
  .footer__bottom .container
    flex-wrap nowrap
@media (min-width: 1200px)
  .icon-arrow-prev
    left -100px
  .icon-arrow-next
    right -100px
  .footer__item--title
    font-size: 28px
  .footer__item--30
    flex-basis 30%