.header
  background-image url("../img/header-bg.png")
  background-repeat no-repeat
  background-size cover
  width 100%
  height 490px
  &__container
    margin 0 auto
    padding 56px 0 0 0
    display flex
    justify-content center
  &__description
    text-align center
    color #fff
    margin-top: -68px
  &__heading
    font-size 55px
    font-weight 600
  &__paragraph
    font-size 35px
    margin-bottom 28px
  &__button
    font-size 23px
    cursor pointer
    background-color rgba(18, 179, 103, 0.4)
    box-shadow 0px 0px 7px 3px rgba(0,0,0,0.35)
    border none
    color #fff
.menu
  display flex
  justify-content space-between
  align-items flex-start
  &__wrap
    font-size 23px
    font-weight 300
    display flex
    width 476px
    justify-content space-between
  &__item
    list-style none
  &__link
    color #fff
.icon-arrow-prev, .icon-arrow-next
  z-index: 5
  position: absolute
  font-size: 49px
  top: 50%
  color: #fff
  opacity 0.2
  transform: translateY(-50%)
  cursor pointer
  &:hover
    opacity 0.5
.icon-arrow-prev
  left 0px
.icon-arrow-next
  right 0px
.slick-slider
  width 900px
  margin 0 auto


@media (min-width: 960px)
  .header__description
    text-align left
  .header__heading
    font-size 65px
  .header__paragraph
    font-size 45px
  .header__container
    padding 56px 15px 0 15px
    justify-content space-around