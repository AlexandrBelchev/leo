.tab
  padding-top 48px
  &__container
    flex-wrap wrap
  &__name
    flex-basis 100%
    text-align center
    color #7b7a7a
    font-weight 300
    font-family segoewp
    &--heading
      font-size 22px
    &--description
      font-size 18px
  &__content
    display none
    flex-wrap wrap
    box-shadow 0 0 5px rgba(0, 0, 0, 0.16)
    padding 0 55px 70px 55px
    &.current
      display inherit
    &__title
      font-size 30px
      text-align left
      color #4f4f4f
      margin-bottom 25px
    &__description
      font-size 14px
      color #818181
  &__image--wraper
    display flex
    justify-content center
    flex-basis 100%
    margin 55px 0
ul
  &.tabs
    margin 0px
    padding 0px
    list-style none
    width 100%
    display flex
    justify-content space-between
    li
      display flex
      flex-basis 100%
      flex-wrap wrap
      justify-content center
      padding 10px 15px
      cursor pointer
      &.current
        box-shadow 0 0 5px rgba(0, 0, 0, 0.16)
        position relative
        &:after
          content: ''
          background #FFFFFF
          position absolute
          height 10px
          bottom -3px
          width 100%
          display block
          left 50%
          transform translateX(-50%)
.tab__content__description + .tab__content__description
  margin-top 40px
.current .tab__name--heading, .current .tab__name--description
  color #5f5f5f
  font-weight 700
@media (min-width: 960px)
  .tab__name--heading
    font-size 27px
  .tab__name--description
    font-size 23px
  .tab__content__title
    font-size 39px